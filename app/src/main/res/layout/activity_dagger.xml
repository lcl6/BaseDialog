<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#ff00ff"
            android:text="沉浸状态栏黑色字体"
            />
        <TextView
            android:id="@+id/tv_status_white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#0000ff"
            android:text="沉浸状态栏白色字体"
            />
        <TextView
            android:id="@+id/tv_status_height"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#00ffff"
            android:text="获取状态栏的高度"
            />

        <TextView
            android:id="@+id/tv_fade_in"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#fff"
            android:text="fade进退场动画"
            />
        <TextView
            android:id="@+id/tv_slide_in"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#fff"
            android:text="slide进退场动画"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_float"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="我是漂浮的view"
            android:background="#c4c4c4"
            />

    </RelativeLayout>

</LinearLayout>